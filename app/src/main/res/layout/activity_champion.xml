<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent" android:background="@color/colorPrimary"
              android:layout_height="match_parent">




    <com.github.florent37.parallax.ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="1" tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">




        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/art"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:tag="parallax=0.5"
                    android:src="@drawable/braum"/>


            <ImageView
                    android:id="@+id/mastery"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:tag="parallax=0.3"
                    android:src="@drawable/mastery7"
                    android:layout_above="@+id/name" android:layout_centerHorizontal="true"
                    android:layout_marginBottom="57dp"/>



            <TextView android:layout_width="wrap_content"
                      android:gravity="center"
                      android:layout_height="wrap_content"
                      android:text="Braum"
                      android:tag="parallax=0.1"
                      android:layout_marginTop="-70dp"
                      android:id="@+id/name"
                      android:layout_below="@+id/art"
                      android:textSize="60sp"
                      android:textColor="@android:color/white"
                      android:layout_centerHorizontal="true"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_below="@+id/name"
                    android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        app:cardElevation="4dp">
                    <TextView

                            android:layout_margin="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mastery score"/>
                    <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/mastery_chart"
                            android:layout_margin="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView

                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        app:cardElevation="4dp">


                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView

                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        app:cardElevation="4dp">


                </android.support.v7.widget.CardView>
            </LinearLayout>
        </RelativeLayout>
    </com.github.florent37.parallax.ScrollView>

    <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="?android:attr/windowBackground"
            app:menu="@menu/navigation"/>
</LinearLayout>