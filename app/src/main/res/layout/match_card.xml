<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal" android:elevation="8dp"
              android:layout_width="match_parent"
              android:layout_height="120dp" android:layout_margin="10dp" >
    <LinearLayout android:baselineAligned="false" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="horizontal">
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/champion_image"/>
        <ImageView
                android:layout_width="40dp" android:layout_below="@id/champion_image"
                android:layout_height="40dp"
                android:id="@+id/spell1"/>
        <ImageView
                android:layout_width="40dp" android:layout_below="@id/champion_image" android:layout_toRightOf="@id/spell1"
                android:layout_height="40dp"
                android:id="@+id/spell2"/>
    </RelativeLayout>

    <LinearLayout android:layout_width="0dp" android:layout_weight="1"
                  android:gravity="center" android:paddingRight="80dp"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <TextView android:text="Victory" android:id="@+id/victory" android:textSize="18sp"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:text="10/2/6" android:id="@+id/kda" android:textSize="18sp" android:padding="6dp"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:text="Ranked 5v5" android:id="@+id/mode" android:textSize="18sp"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>